        .topbar__name.text-center.d-none.d-md-inline-flex(data-sessiondata="enteBeneficiario") 
        .topbar__obj.text-center.font-weight-bold.my-1.d-none.d-md-inline-flex(data-sessiondata="subject") 
        .topbar__amount.font-weight-bold(data-sessiondata="importo")   
