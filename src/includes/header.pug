header.position-fixed.header.bg-white.shadow.py-3.py-md-2.px-4.d-flex
    .header__sx.d-flex
        .logo-pagopa.d-flex.align-items-center.mr-2.mr-md-4
            svg(width="56", height="36")
                title Logo pagoPA
                use(href="/assets/icons/app.svg#pagopa-logo")
        .logo-institution.d-flex.align-items-center.mr-2
            svg(width="46", height="48")
                title Logo Ente
                use(href="/assets/icons/app.svg#institutions-milano")
